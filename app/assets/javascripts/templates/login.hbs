<div class="form">
<fieldset class="scheduler-border">
    <legend class="scheduler-border"><h1><i class="glyphicon glyphicon-user"></i> Login</h1></legend>
<form {{action "login" content on="submit"}} class="form-horizontal">
  
    {{#if errorMsg}}
      <div class="alert alert-error">
      <div id="login_error" class="error">  {{errorMsg}} </div>
      </div>
    {{/if}}
  <label class="control-label" >Email</label>

<div class="form-group input-group">
   <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
      {{view Em.TextField valueBinding="email" id="email" class="form-control"}}
</div>
  
 <label class="control-label">Password</label>

<div class="form-group input-group">
    <span class="input-group-addon"> <i class="glyphicon glyphicon-lock"></i></span>
      {{view Ember.TextField valueBinding="password" type="password" id="password" class="form-control"}}
  </div>
  <div class="form-group input-group">
  {{input type="checkbox"  name="remember_me" checked=remember_me}}
  <label class="label-control">Rember Me</label> | {{view Deerfield.MenuItem href="#/password_reset" label="Forgot you password?" class="btn "}}
  </div>
  <div class="form-actions">
    <button  type="submit" class="btn btn-primary" value="Login">Login</button>
    <input {{action "cancel"}} type="submit" class="btn" value="Cancel" />
  </div>
</form>
</fieldset>
</div>


