 <div id="wrapper">
       {{#if errorMsg}}
      <div class="alert alert-error">
          {{errorMsg}}
      </div>
    {{/if}}
        <div id="page-wrapper">
            <div class="row">
                 <!-- page header -->
                <div class="col-lg-12">
                    <h1 class="page-header">User Registration </h1>
                </div>
                <!--end page header -->
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <!-- Form Elements -->
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="row">
                                <form >
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>Business</label>
                                            <select class="form-control" name="business" id="role" onchange="find_Type()">
                                                <option value="employee">Employee</option>
                                                <option value="customer">Customer</option>
                                            </select>
                                        </div>

                                        <div class="form-group " id="emp">
                                            <label>Name</label>
                                            {{view Em.TextField valueBinding="first_name" id="name" class="form-control "}}
                                            <span id="emp_name_error" class="regis_error"></span>
                                        </div>

                                        <div class="form-group hide-field" id="cust">
                                            <label>Company Name</label>
                                            {{view Em.TextField valueBinding="company_name" id="company_name" class="form-control"}}
                                            <span id="cust_name_error" class="regis_error"></span>
                                        </div>

                                        <div class="form-group">
                                            <label for="disabledSelect">Email</label>
                                            {{view Em.TextField valueBinding="email" id="email" class="form-control"}}
                                             <span id="email_error" class="regis_error"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group fieldgroup">
                                            <label class="control-label"  for="inputError">Password</label>
                                            {{view Ember.TextField valueBinding="password" type="password" id="password" class="form-control"}}
                                            <div id="pass_error" class="regis_error"></div>
                                        </div>
                                        <div class="form-group ">
                                            <label class="control-label" for="inputError">Confirm Password</label>
                                            {{view Ember.TextField valueBinding="password_confirmation" type="password" id="password_confirmation" class="form-control"}}
                                             <div id="pass_match_error" class="regis_error"></div>
                                        </div>

                                    <button type="submit"  {{action "register" }} class="btn btn-primary">Register</button>
                                    <input {{action 'cancel'}} type="button" class="btn" value="Cancel">   
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End Form Elements -->
            </div>
        </div>
    </div>
    <!-- end page-wrapper -->
</div>