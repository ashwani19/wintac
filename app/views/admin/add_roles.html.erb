<%if true %>
<div class="form-role">
<fieldset class="scheduler-border">
    <legend class="scheduler-border"><h2>Create Role</h2></legend>
<%= form_tag admin_create_role_path do %>
  <div class="form-group">
    <label>Role Name</label>
    <%= text_field_tag :name, params[:name] ,:class=>"form-control"%>
  </div>
  <div class="form-group">
    <%= label_tag :description %>
    <%= text_area_tag :role_desc,params[:role_desc],:class=>"form-control" %>
  </div>
  

 
</div>
<div class="form-role">
</fieldset>


<fieldset class="scheduler-border">
	<legend class="scheduler-border">Add Resources</legend>

		<%if !@resource.nil?%>
			<%@resource.each do |resource| %>

			<div class="row">
				<div class="col-md-12">
					<input type="checkbox" name="resource[]" value="<%=resource.id%>" />
				
        
     			<%= label_tag(:resource, resource.name) %>
  				</div>
			</div>

			<%end%>
		<%end%>




 <p class="button"><%= submit_tag "Create Role" ,:class=>'btn btn-primary'%> &nbsp;<%=link_to "Cancle" ,admin_manage_user_path ,:class=>" btn btn-primary"%></p>
 <%end%>
<% end %>

</fieldset>
</div>

