<form action="<%=admin_update_employee_path%>" method="post" >
<div class="row">
                <div class="col-lg-12">
                    <!-- Form Elements -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                             Update User Profile 
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    
                                        <div class="form-group">
                                            <input type="hidden" value="<%=@user.id%>" name="user_id">
                                            <label>Last Name</label>
                                                <input class="form-control"  name="last_name" placeholder="First Name" value="<%=@employee.last_name.nil? ? '' : @employee.last_name %>">
                                            </div>
                                            <div class="form-group">
                                            <label>Address</label>
                                            <textarea class="form-control" name="address" rows="3"><%=@employee.address.nil? ? '' : @employee.address %></textarea>
                                            
                                        </div>
                                            <div class="form-group">
                                            <label>City</label>
                                            <input class="form-control" name="city" placeholder="Enter text"  value="<%=@employee.city.nil? ? '' : @employee.city %>">
                                            </div>
                                            <div class="form-group">
                                            <label>State</label>
                                            <input class="form-control" name="state" placeholder="Enter text"  value="<%=@employee.state.nil? ? '' : @employee.state %>">
                                            </div>
                                            <div class="form-group">
                                            <label>Zip</label>
                                            <input class="form-control" name="zip" placeholder="Enter text"
                                             value="<%=@employee.zip.nil? ? '' : @employee.zip %>">
                                                
                                        </div>
                                        <div class="form-group">
                                            <label>Date Of Birth(MM/DD/YYYY)</label>
                                        
                                        <div class='input-group date' id='datetimepicker1'>
                                            <input type='text' class="form-control" name="dob" disabled  value="<%=@employee.dob.nil? ? '' : @employee.dob %>"/>
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                      </div>
                                  </div>
                                   
                                        
                                        
                                        <div class="form-group">
                                            <label>Ref.Code</label>
                                            <select class="form-control" name="ref_code">
                                                <option value="BAD DEBT">BAD DEBT</option>
                                                <option value="COMMERCIAL">COMMERCIAL</option>
                                                <option value="CONTRACT">CONTRACT</option>
                                                <option value="CUSTOMER">CUSTOMER</option>
                                                <option value="HOME REPAIR">HOME REPAIR</option>
                                                <option value="LEAD">LEAD</option>
                                                <option value="PAYEE">PAYEE</option>
                                                <option value="PREV.MAINT.">PREV.MAINT.</option>
                                                <option value="PROSPECT">PROSPECT</option>
                                                <option value="SPECIAL">SPECIAL</option>
                                                <option value="VENDOR">VENDOR</option>

                                            </select>
                                            
                                        </div>
                                        
                                       
                                    
                                </div>
                                <div class="col-lg-6">
                                    
                                    
                                        <div class="form-group">
                                            <label class="control-label" for="inputSuccess">First Name</label>
                                            <input type="text" class="form-control" name="first_name" id="inputSuccess"  value="<%=@employee.first_name.nil? ? '' : @employee.first_name %>">
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label" for="inputSuccess">Mid Name</label>
                                            <input type="text" class="form-control" name="mid_name" id="inputSuccess"  value="<%=@employee.mid_name.nil? ? '' : @employee.mid_name %>">
                                        </div>
                                        <div class="form-group ">
                                            <label class="control-label" for="inputWarning">Phone No-1</label>
                                            <input type="text" class="form-control" name="phone" id="inputWarning"  value="<%=@employee.phone.nil? ? '' : @employee.phone %>">
                                        </div>
                                        <div class="form-group ">
                                            <label class="control-label" for="inputError">Phone No-2</label>
                                            <input type="text" name="phone_1" class="form-control" id="inputError"  value="<%=@employee.phone_1.nil? ? '' : @employee.phone_1 %>">
                                        </div>
                                    
                                    
                                    
                                        <div class="form-group">
                                            <label for="disabledSelect">Email</label>
                                                <input class="form-control" name="" id="disabledInput" type="text" value="<%=@user.email%>" disabled>
                                        </div>
                                        <div class="form-group ">
                                            <label class="control-label"  for="inputError">SS#</label>
                                            <input type="text" name="ss_no" class="form-control"  value="<%=@employee.ss_no.nil? ? '' : @employee.ss_no %>">
                                            
                                        </div>
                                        <div class="form-group ">
                                            <label class="control-label"  for="inputError">County</label>
                                            <input type="text" class="form-control" name="county" placeholder=""  value="<%=@employee.county.nil? ? '' : @employee.county %>">
                                        </div>
                                        
                                       <button type="submit" class="btn btn-primary">Submit Button</button>
                                         <button type="button" class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Cancel</button>   
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                     <!-- End Form Elements -->
                </div>
                </form>