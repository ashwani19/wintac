<form role="form" action="<%=admin_update_customer_path%>" method="post">
<div class="row">
                <div class="col-lg-12">
                    <!-- Form Elements -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Update User Profile
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    
                                        <div class="form-group">
                                            <input type="hidden" value="<%=@user.id%>" name="user_id">
                                            <label>Compony Name</label>
                                                <input class="form-control" name="company_name" placeholder="Compony Name" value="<%=@customer.company_name.nil? ? '' : @customer.company_name %>">
                                            </div>
                                            <div class="form-group">
                                            <label>Address</label>
                                            <textarea class="form-control" name="address1" rows="3" value=""><%=@customer.address1.nil? ? '' : @customer.address1 %></textarea>
                                        </div>
                                        <div class="form-group">
                                            <label>City</label>
                                            <input class="form-control" name="city" placeholder="Enter text" value="<%=@customer.city.nil? ? '' : @customer.city %>">
                                            </div>
                                            <div>
                                            <label>State</label>
                                            <input class="form-control" name="state" placeholder="Enter text" value="<%=@customer.state.nil? ? '' : @customer.state %>">
                                            </div>
                                            <div>
                                            <label>Zip</label>
                                            <input class="form-control" name="zip" placeholder="Enter text" >
                                            </div>
                                        
                                        
                                        
                                        <div class="form-group">
                                            <label>Business</label>
                                            <select class="form-control" name="business">
                                                <option value="CONTRACTOR">CONTRACTOR</option>
                                                <option value="DIRECT MAIL">DIRECT MAIL</option>
                                                <option value="NEWS PAPER AD">NEWS PAPER AD</option>
                                                <option value="REFERRAL">REFERRAL</option>
                                                <option value="UNKNOWN">UNKNOWN</option>
                                                <option value="WORD OF MOUTH">WORD OF MOUTH</option>
                                                <option value="YELLOW PAGES">YELLOW PAGES</option>
                                            </select>
                                        </div>
                                        
                                       
                                    
                                </div>
                                <div class="col-lg-6">
                                    
                                    
                                        <div class="form-group">
                                            <label class="control-label" for="inputSuccess">First Name</label>
                                            <input type="text" class="form-control" id="inputSuccess"  name="name" value="<%=@customer.name.nil? ? '' : @customer.name %>">
                                        </div>
                                        <div class="form-group ">
                                            <label class="control-label"  for="inputWarning">Phone No-1</label>
                                            <input type="text" class="form-control" name="phone1" id="inputWarning"value="<%=@customer.phone1.nil? ? '' : @customer.phone1 %>" >
                                        </div>
                                        <div class="form-group ">
                                            <label class="control-label" for="inputError">Phone No-2</label>
                                            <input type="text" class="form-control" name="phone2" id="inputError" value="<%=@customer.phone2.nil? ? '' : @customer.phone2 %>">
                                        </div>
                                    
                                    
                                    
                                        <div class="form-group">
                                            <label for="disabledSelect">Email</label>
                                                <input class="form-control" name="email" id="disabledInput" type="text" value="<%=@user.email%>" disabled>
                                        </div>
                                        <div class="form-group ">
                                            <label class="control-label"  for="inputError">Solutations</label>
                                            <input type="text" class="form-control" name="salutation" value="<%=@customer.salutation.nil? ? '' : @customer.salutation %>">
                                            
                                        </div>
                                        <div class="form-group ">
                                            <label class="control-label" for="inputError">County</label>
                                            <input type="text" class="form-control" name="county" placeholder="Font Awesome Icon" value="<%=@customer.county.nil? ? '' : @customer.county %>">
                                        </div>
                                        <input type="submit" class="btn btn-primary" value="Update User"/>
                                       
                                         <button type="button" class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Cancel</button>    
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                     <!-- End Form Elements -->
                </div>
                </form>