<div class="modal-dialog">
  <div class="modal-content">  
    <div class="modal-header">
      <form id="myForm" action="<%=admin_update_role_path%>" method="post" remote="true">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <div class="confirmation">          
          <h3 class="text-center rgray"></h3>
            <div>   
               <%if true %>
<div >
<fieldset class="scheduler-border">
    <legend class="scheduler-border"><h2>Create Role</h2></legend>

  <div class="form-group">
    <label>Role Name</label>
    <%= text_field_tag :name, params[:name] ,:value=>@add_role.name,:class=>"form-control" ,:id=>"disabledInput", disabled:true %>
  </div>
  <div class="form-group">
    <%= label_tag :description %>
    <textarea name="role_desc" class="form-control" id="role_desc"><%=@add_role.role_desc%></textarea>
    
  </div>
  
<input type="hidden" name="id" value="<%=@add_role.id%>"/>
 
</div>
<div >
</fieldset>


<fieldset class="scheduler-border">
  <legend class="scheduler-border">Add Resources</legend>

    <%if !@resource.nil?%>
    <div class="row">
    <div class="col-md-4">
      <input type="checkbox" name="checkbox" id="select-all"  /><label class="label-role"> Select All</label>
    </div>
    </div>
    <div class="row">
      
      <%@resource.each do |resource| %>

      
        <div class="col-md-6">
          <input type="checkbox" name="resource[]" value="<%=resource.id%>" <%if !@manage.nil?%><%@manage.each do |m|%><%if m.resource_id==resource.id%>checked <%end%><%end%><%end%>/>
        
        
          <%= label_tag(:resource, resource.name,:class=>"label-role") %>
          </div>
      

      <%end%>
      </div>
    <%end%>




 <p class="button"><%= submit_tag "Update Role" ,:class=>'btn btn-primary'%> &nbsp;<button type="button" class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Cancel</button></p>
 
<% end %>

</fieldset>
</div>
</form>
<style type="text/css">

</style>
<script type="text/javascript">
$(document).ready(function() { 
            
 $('#myForm').ajaxForm(function() { 
     $("#loader").hide();
     sendAjax();
     $("div#myModal").html("<%= escape_javascript(render(:partial => "admin/update_success")) %>");
    }); 
});

$('#select-all').click(function(event) {   
    if(this.checked) {
        // Iterate each checkbox
        $(':checkbox').each(function() {
            this.checked = true;                        
        });
    }
    else
    {
      $(':checkbox').each(function() {
            this.checked = false;                        
        });
    }
});

</script>

                          
          </div>
        </div>
      </form>
    </div>    
  </div>
</div>