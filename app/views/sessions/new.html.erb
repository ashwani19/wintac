<div class="form info">
<fieldset class="scheduler-border">
    <legend class="scheduler-border"><h1>Login</h1></legend>
<%= form_tag sessions_path do %>
  <div class="form-group ">
    <%= label_tag :email ,nil,:class=>"control-label"%><br />
    <%= text_field_tag :email, params[:email] ,:class=>"form-control"%>
  </div>
  <div class="form-group ">
    <%= label_tag :password ,nil,:class=>"control-label"%><br />
    <%= password_field_tag :password,nil,:class=>"form-control" %>
  </div>
  <div ><%= link_to "forgotten password?", new_password_reset_path %></p>
<div class="row">
        <div class="col-md-12">
  <%= check_box_tag :remember_me, 1, params[:remember_me] %>
  <%= label_tag :remember_me %>
</div>
</div>
  <div class="form-group button"><%= submit_tag "Log in" ,:class=>'btn btn-primary'%></div>
<% end %>

</fieldset>
</div>
