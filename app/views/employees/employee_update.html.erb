<body>
    <!--  wrapper -->
    <div id="wrapper">
        <!-- navbar top -->
        
        <!-- end navbar side -->
        <!--  page-wrapper -->
          <div id="page-wrapper">
            <div class="row">
                 <!-- page header -->
                <div class="col-lg-12">
                    <h1 class="page-header">Profile For <%=@employee.first_name%></h1>
                </div>
                <!--end page header -->
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <!-- Form Elements -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Please update your information to proceed..
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <form action="<%=employees_update_row_path%>" enctype="multipart/form-data" method="post">
                                        <div class="form-group">
                                            <label>Last Name</label>
                                                <input class="form-control"  name="employee[last_name]" placeholder="Last Name" value="<%=@employee.last_name.nil? ? '' : @employee.last_name %>">
                                            </div>
                                            <div class="form-group">
                                            <label>Address</label>
                                            <textarea class="form-control" name="employee[address]" rows="3">
                                            <%=@employee.address.nil? ? '' : @employee.address.strip %>
                                            </textarea>
                                            
                                        </div>
                                            <div class="form-group">
                                            <label>City</label>
                                            <input class="form-control" name="employee[city]" placeholder="Enter text" value="<%=@employee.city.nil? ? '' : @employee.city %>">
                                            </div>
                                            <div class="form-group">
                                            <label>State</label>
                                            <input class="form-control" name="employee[state]" placeholder="Enter text" value="<%=@employee.state.nil? ? '' : @employee.state %>">
                                            </div>
                                            <div class="form-group">
                                            <label>Zip</label>
                                            <input class="form-control" name="employee[zip]" placeholder="Enter text" value="<%=@employee.zip.nil? ? '' : @employee.zip %>">
                                                
                                        </div>
                                        <div class="form-group">
                                            <label>Date Of Birth(MM/DD/YYYY)</label>
                                        
                                        <div class='input-group date' id='datetimepicker1'>
                                            <input type='text' class="form-control" name="employee[dob]" value="<%=@employee.dob.nil? ? '' : @employee.dob.to_formatted_s(:rfc822) %>"/>
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                      </div>
                                  </div>
                                  <label>Attachments Pictures/Word Documents</label>
                                   <div class="form-group">
                                         <%if !@employee.filename.nil? %> 
                                        <%= @employee.filename %><br>
                                        <%=link_to "Download" ,serve_employee_path(@employee)%>
                                        <%end%>
                                        </div>
                                      <div class="form-group">
                                            
                                            <input type="file" class="form-control" name="employee[doc_or_image]" value="<%=@employee.filename.nil? ? '' : @employee.filename %>"/>
                                        </div>  
                                        
                                        <div class="form-group">
                                            <label>Ref.Code</label>
                                            <select class="form-control" name="employee[ref_code]">
                                                <option value="BAD DEBT">BAD DEBT</option>
                                                <option value="COMMERCIAL">COMMERCIAL</option>
                                                <option value="CONTRACT">CONTRACT</option>
                                                <option value="CUSTOMER">CUSTOMER</option>
                                                <option value="HOME REPAIR">HOME REPAIR</option>
                                                <option value="LEAD">LEAD</option>
                                                <option value="PAYEE">PAYEE</option>
                                                <option value="PREV.MAINT.">PREV.MAINT.</option>
                                                <option value="PROSPECT">PROSPECT</option>
                                                <option value="SPECIAL">SPECIAL</option>
                                                <option value="VENDOR">VENDOR</option>

                                            </select>
                                            
                                        </div>
                                        <div class="form-group">
                                            <label>Division</label>
                                                <input class="form-control"  name="employee[devision]" placeholder="Last Name" value="<%=@employee.devision.nil? ? '' : @employee.devision %>">
                                            </div>
                                       <div class="form-group">
                                            <label>Notes</label>
                                        <textarea class="form-control" name="employee[notes]" rows="3"><%=@employee.notes.nil? ? '' : @employee.notes %></textarea>
                                        </div>
                                       
                                    
                                </div>
                                <div class="col-lg-6">
                                    
                                    
                                        <div class="form-group">
                                            <label class="control-label" for="inputSuccess">First Name</label>
                                            <input type="text" class="form-control" name="employee[first_name]" id="inputSuccess" value="<%=@employee.first_name.nil? ? '' : @employee.first_name %>">
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label" for="inputSuccess">Mid Name</label>
                                            <input type="text" class="form-control" name="employee[mid_name]" id="inputSuccess" value="<%=@employee.mid_name.nil? ? '' : @employee.mid_name %>">
                                        </div>
                                        <div class="form-group ">
                                            <label class="control-label" for="inputWarning">Phone No-1</label>
                                            <input type="text" class="form-control" name="employee[phone]"  value="<%=@employee.phone.nil? ? '' : @employee.phone %>">
                                        </div>
                                        <div class="form-group ">
                                            <label class="control-label" for="inputError">Phone No-2</label>
                                            <input type="text" name="employee[phone_1]" class="form-control"  value="<%=@employee.phone_1.nil? ? '' : @employee.phone_1 %>">
                                        </div>
                                        <fieldset>
                                        <legend>Employee Type</legend>
                                        <div class="row">
                                                <div class="col-md-4">
                                                    <input type="radio" name="employee[emp_type]" id="emp_type1" value="Technician"<%if @employee.emp_type=='Technician'%>checked<%end%> >Technician
                                                  
                                                </div>
                                            <div class="col-md-4">
                                           
                                                <input type="radio" name="employee[emp_type]" id="emp_type2" value="Salesperson" <%if @employee.emp_type=='Salesperson'%>checked<%end%> >Salesperson
                                            </div>
                                            <div class="col-md-4">
                                                <input type="radio" name="employee[emp_type]" id="emp_type3" value="Project Manager" <%if @employee.emp_type=='Project Manager'%>checked<%end%>>Project Manager
                                            </div>
                                            <br/>
                                             <div class="col-md-4">
                                                <input type="radio" name="employee[emp_type]" id="emp_type4" value="Account Manager" <%if @employee.emp_type=='Account Manager'%>checked<%end%>>Account Manager
                                            </div>
                                             <div class="col-md-4">
                                                <input type="radio" name="employee[emp_type]" id="emp_type5" value="Administrative" <%if @employee.emp_type=='Administrative'%>checked<%end%>>Administrative
                                            </div>
                                             <div class="col-md-4">
                                                <input type="radio" name="employee[emp_type]" id="emp_type6" value="Executive" <%if @employee.emp_type=='Executive'%>checked<%end%>>Executive
                                            </div>
                                            <br/>
                                            <div class="col-md-4">
                                                <input type="radio" name="employee[emp_type]" id="emp_type7" value="WP Tech Admin" <%if @employee.emp_type=='WP Tech Admin'%>checked<%end%>>WP Tech Admin
                                            </div>
                                            <div class="col-md-4">
                                                <input type="radio" name="employee[emp_type]" id="emp_type7" value="Other" <%if @employee.emp_type=='Other'%>checked<%end%>>Other
                                            </div>
                                        </div>
                                        </fieldset>
                                        <div class="form-group ">
                                            <label>Hire Date(MM/DD/YYYY)</label>
                                     <div class='input-group date' id='datetimepicker2'>
                                            <input type='text' class="form-control" name="employee[hire_date]" value="<%=@employee.hire_date.nil? ? '' : @employee.hire_date.to_formatted_s(:rfc822) %>"/>
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                      </div>
                                  </div>
                                  <div class="form-group ">
                                    <label>Termination Date(MM/DD/YYYY)</label>
                                       <div class='input-group date' id='datetimepicker3'>
                                            <input type='text' class="form-control" name="employee[termination_date]" value="<%=@employee.termination_date.nil? ? '' : @employee.termination_date.to_formatted_s(:rfc822)%>"/>
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                      </div>
                                  </div>
                                  <div class="form-group ">
                                    <label>Raise Date(MM/DD/YYYY)</label>
                                       <div class='input-group date' id='datetimepicker4'>
                                            <input type='text' class="form-control" name="employee[raise_date]" value="<%=@employee.raise_date.nil? ? '' : @employee.raise_date.to_formatted_s(:rfc822) %>"/>
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                      </div>
                                    </div>
                                        <div class="form-group">
                                            <label for="disabledSelect">Email</label>
                                                <input class="form-control" name="employee[email]" id="disabledInput" type="text" value="<%=@employee.email%>" disabled>
                                        </div>
                                        <label for="disabledSelect">Raise Amount</label>
                                        <div class="form-group input-group"><span class="input-group-addon"><i class="glyphicon glyphicon-euro"></i></span>
                                            <input type="text" class="form-control" name="employee[raise_amount]" value="<%=@employee.raise_amount.nil? ? '' : @employee.raise_amount %>">
                                            <span class="input-group-addon">.00</span>
                                        </div>

                                        <div class="form-group ">
                                            
                                            <label class="control-label"  for="inputError">SS#</label>
                                            <input type="text" name="employee[ss_no]" class="form-control" value="<%=@employee.ss_no_enc.nil? ? '' : @employee.ss_no_dec %>">
                                            
                                        </div>
                                        <div class="form-group ">
                                            <label class="control-label"  for="inputError">County</label>
                                            <input type="text" class="form-control" name="employee[county]" value="<%=@employee.county.nil? ? '' : @employee.county %>">
                                        </div>
                                        
                                       <button type="submit" class="btn btn-primary">Update</button>
                                            
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                     <!-- End Form Elements -->
                </div>
            </div>
        </div>
        <!-- end page-wrapper -->

    </div>
    <!-- end wrapper -->

    <!-- Core Scripts - Include with every page -->
    
</body>

<script type="text/javascript">
            $(function () {
                $('.date').datepicker(
                  {
                    format: 'dd/mm/yyyy'
                });
                
            });
        </script>