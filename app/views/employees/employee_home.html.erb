<body>
    <!--  wrapper -->
    <div id="wrapper">
        <!-- navbar top -->
        
        <!-- end navbar side -->
        <!--  page-wrapper -->
          <div id="page-wrapper">
            <div class="row">
                 <!-- page header -->
                <div class="col-lg-12">
                    <h1 class="page-header">Profile For <%=current_user.full_name%></h1>
                </div>
                <!--end page header -->
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <!-- Form Elements -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Please update your information to proceed..
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    
                                        <div class="form-group">
                                            <label>Last Name</label>
                                                
                                                <%= best_in_place  @employee, :last_name, :type => :input ,:classes=>"form-control"%>
                                            </div>
                                            <div class="form-group">
                                            <label>Address</label>
                                            
                                            <%= best_in_place  @employee, :address, :type => :textarea  ,:classes=>"form-control"%>
                                            
                                        </div>
                                            <div class="form-group">
                                            <label>City</label>
                                            
                                            <%= best_in_place  @employee, :city, :type => :input ,:classes=>"form-control"%>
                                            </div>
                                            <div class="form-group">
                                            <label>State</label>
                                            
                                            <%= best_in_place  @employee, :state, :type => :input ,:classes=>"form-control"%>
                                            </div>
                                            <div class="form-group">
                                            <label>Zip</label>
                                            
                                                <%= best_in_place  @employee, :zip, :type => :input ,:classes=>"form-control"%>
                                        </div>
                                        <div class="form-group">
                                            <label>Date Of Birth(MM/DD/YYYY)</label>
                                        
                                         <%= best_in_place @employee, :dob, :type => :date,:nil => "Add a Date",:classes=>"form-control" %>
                                        </div>
                                   
                                        
                                        
                                        <div class="form-group">
                                            <label>Ref.Code</label>
                                            
                                            <%= best_in_place @employee, :ref_code, :type => :select, :collection => [["BAD DEBT", "BAD DEBT"], ["COMMERCIAL", "COMMERCIAL"], ["CONTRACT", "CONTRACT"], ["CUSTOMER", "CUSTOMER"] , ["HOME REPAIR", "HOME REPAIR"], ["LEAD", "LEAD"], ["PAYEE", "PAYEE"], ["REV.MAINT", "REV.MAINT"], ["PROSPECT", "PROSPECT"], ["SPECIAL", "SPECIAL"], ["VENDOR", "VENDOR"]] ,:classes=>"form-control" %>
                                        </div>
                                        
                                       
                                    
                                </div>
                                <div class="col-lg-6">
                                    
                                    
                                        <div class="form-group">
                                            <label class="control-label" for="inputSuccess">First Name</label>
                                            
                                            <%= best_in_place  @employee, :first_name, :type => :input ,:classes=>"form-control"%>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label" for="inputSuccess">Mid Name</label>
                                            
                                            <%= best_in_place  @employee, :mid_name, :type => :input ,:classes=>"form-control"%>
                                        </div>
                                        <div class="form-group ">
                                            <label class="control-label" for="inputWarning">Phone No-1</label>
                                            
                                            <%= best_in_place  @employee, :phone, :type => :input ,:classes=>"form-control"%>
                                        </div>
                                        <div class="form-group ">
                                            <label class="control-label" for="inputError">Phone No-2</label>
                                            
                                            <%= best_in_place  @employee, :phone, :type => :input ,:classes=>"form-control"%>
                                        </div>
                                    
                                    
                                    
                                        <div class="form-group">
                                            <label for="disabledSelect">Email</label>
                                                <input class="form-control" name="" id="disabledInput" type="text" value="<%=current_user.email%>" disabled>
                                        </div>
                                        <div class="form-group ">
                                            <label class="control-label"  for="inputError">SS#</label>
                                            
                                           <%= best_in_place  @employee, :ss_no, :type => :input ,:classes=>"form-control"%> 
                                        </div>
                                        <div class="form-group ">
                                            <label class="control-label" for="inputError">County</label>
                                            
                                               <%= best_in_place  @employee, :county, :type => :input ,:classes=>"form-control"%>
                                        </div>
                                        
                                          
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                     <!-- End Form Elements -->
                </div>
            </div>
        </div>
        <!-- end page-wrapper -->

    </div>
    <!-- end wrapper -->

    <!-- Core Scripts - Include with every page -->
    
</body>

