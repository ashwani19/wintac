
<div class="form">
  <fieldset  class="scheduler-border">
    <legend class="scheduler-border"><h1>Sign Up</h1></legend>
<%= form_tag(customers_path) do %>
<input type="hidden" name="role" value="customer"/>
  <p>
    <%= label_tag 'first_name'  %><br />
    <%= text_field_tag 'user[first_name]', nil,:placeholder=>'Enter your first name here', :class=>"form-control"%>
  </p>
  <p>
    <%= label_tag 'last_name'  %><br />
    <%= text_field_tag 'user[last_name]', nil,:placeholder=>'Enter your first name here', :class=>"form-control"%>
    
  </p>

  <p>
    <%= label_tag 'name' %><br />
    
    <%= text_field_tag 'user[email]', nil,:placeholder=>'Enter your email here', :class=>"form-control"%>
  </p>
  <p>
    <%= label_tag 'password'  %><br />
    
    <%= password_field_tag 'user[password]',nil , :class=>"form-control"%>
  </p>
  <p>
    <%= label_tag 'password_confirmation'  %><br />
    
    <%= password_field_tag 'user[password_confirmation]',nil ,:class=>"form-control"%>
  </p>
  <p class="button"><%= submit_tag "Sign Up",:class=>'btn btn-primary' %></p>
<% end %>
</fieldset>
</div>
