<div class="modal-dialog">
  <div class="modal-content">  
    <div class="modal-header">
      <form id="modalFrm" action="" method="get" remote="true">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <div class="confirmation">          
          <h3 class="text-center rgray"></h3>
            <div>                                                  
             <fieldset class="scheduler-border">  
             <legend class="scheduler-border">
              Add a Job Request</legend>
              <div class="form-group ">
                <label class="control-label">Job Location</label>
              <select class="form-control">
                <option>Add new job</option>
              </select>
              </div>

              <div class="form-group ">
                 <label class="control-label">PO Number</label>
                 <input type="number" class="form-control"/>
              </div>
              <div class="form-group ">
                 <label class="control-label">Service Requested:</label>
                 <textarea class="form-control" rows="3"/>
              </div>
              <button  class="btn btn-primary">Add job</button>             
               </fieldset>                           
          </div>
        </div>
      </form>
    </div>    
  </div>
</div>
